doctype html
html
  head
    title Project 10
    body
      div(id='createListBox')
        h2 create lists
        form(method='POST', action='/createlist')
          input
          button Add List
      div(id='completeLists')
        form(method='POST', action='/clearcompletelists')
          button Clear Complete Lists
      div(id='completeTasks')
        form(method='POST', action='/clearcompletetasks')
          button Clear Complete Tasks
      div(id='todoListBox')
        each list in data
          div
            h3= list.listName
            // This line is going to display the name of the list, I still do not understand interpolation well enough.
            // I will have to figure out how to pass the information required to make the backend modify the right part of the database.
            form(method='POST', action='/addtask')
              button Add Task
            form(method='POST', action='/marklistcomplete')
              button Mark List complete
            form(method='POST', action='/deletelist')
              button Delete List
            div(class='items')
              each task in list.tasks
                span= task.name
                  form(method='POST', action='/marktaskcomplete')
                    button Mark Task Complete
                  form(method='POST', action='/deletetask')
                    button Delete Task
